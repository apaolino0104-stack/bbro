// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Proprietario {
  id              Int      @id @default(autoincrement())
  nome            String
  cognome         String
  telefono        String?
  emailPersonale  String?
  docIdentita     String?
  codiceFiscale   String?  // Nuovo campo
  stato           String   @default("TRATTATIVA") // TRATTATIVA, DA_COMPLETARE, COMPLETO

  // Credenziali Generate
  googleEmail     String?
  googlePass      String?
  bookingUser     String?
  bookingPass     String?
  airbnbUser      String?
  airbnbPass      String?
  ciaoBookingUser String?
  ciaoBookingPass String?

  // Relazione: Un proprietario ha molte case
  immobili        Immobile[]
  
  createdAt       DateTime @default(now())

  // Documenti
  documenti       Documento[]
}

model Documento {
  id              Int      @id @default(autoincrement())
  nome            String
  fileUrl         String
  tipo            String // 'PDF', 'IMG'
  
  proprietarioId  Int
  proprietario    Proprietario @relation(fields: [proprietarioId], references: [id])
  
  createdAt       DateTime @default(now())
}

model Immobile {
  id              Int          @id @default(autoincrement())
  nome            String?      // Generato automaticamente
  indirizzo       String
  civico          String?      // Nuovo (estratto da indirizzo)
  zona            String      // Ho rinominato 'citta' in 'zona'
  
  // Dati Catastali e Identificativi
  CIN             String?
  foglio          String?
  particella      String?
  subalterno      String?

  // IDs Portali
  idBooking       String?
  idAirbnb        String?
  idCiaoBooking   String?

  // NUOVI CAMPI (Opzionali per ora)
  metriQuadri     Int?
  postiLetto      Int?
  postiLettoExtra Int?
  camere          Int?
  bagni           Int?

  proprietarioId  Int
  proprietario    Proprietario @relation(fields: [proprietarioId], references: [id])

  // DATI PROFITTABILITÃ€
  facilities            String? // JSON string
  tagli                 String? // JSON string
  modificheStrutturali  String?
  migliorieImmobiliari  String?
  
  // Analisi Simili
  camereDisponibili     Int?
  bagniAnalisi          Int?
  posizionamento        String?
  postiLettoTotaliAnalisi Int? // Renamed to avoid conflict if needed, or just postiLettoTotali
  considerazioni        String?

  // Parametri Gestione
  commissione           Float?

  // Previsione Stagionale
  prezzoBassa           Float?
  prezzoMedia           Float?
  prezzoAlta            Float?
  extraPax              Float?
  
  percBassa             Float?
  percMedia             Float?
  percAlta              Float?
  
  lordoAnnuo            Float?
  guadagnoExtra         Float?
  lordoTotale           Float?
}